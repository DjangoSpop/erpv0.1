@model erpv0._1.Models.ViewModels.OrderItemViewModel

@{
    ViewData["Title"] = "حذف عنصر الطلب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h1 class="h3 mb-0">تأكيد حذف عنصر الطلب</h1>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i> هل أنت متأكد من رغبتك في حذف عنصر الطلب هذا؟ هذا الإجراء لا يمكن التراجع عنه.
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">معلومات الطلب</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrderId)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderId)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ItemId)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ItemId)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.OrderNumber)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.OrderNumber)</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">معلومات المنتج</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductId)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductId)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductName)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Quantity)</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">معلومات التسعير</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="card bg-light mb-3">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">@Html.DisplayNameFor(model => model.ListPrice)</h6>
                                            <p class="card-text h3">@Html.DisplayFor(model => model.ListPrice)</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="card bg-light mb-3">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">@Html.DisplayNameFor(model => model.Discount)</h6>
                                            <p class="card-text h3">@Html.DisplayFor(model => model.Discount)</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="card bg-success text-white mb-3">
                                        <div class="card-body text-center">
                                            <h6 class="card-title">@Html.DisplayNameFor(model => model.TotalAmount)</h6>
                                            <p class="card-text h3">@Html.DisplayFor(model => model.TotalAmount)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="OrderId" />
                <input type="hidden" asp-for="ItemId" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> إلغاء
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> تأكيد الحذف
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>