@model erpv0._1.Models.ProductCategory
@{
    ViewData["Title"] = "إضافة فئة جديدة";
}

<div class="products-module" >
    <h1 class="mb-4">إضافة فئة جديدة</h1>
    <form asp-action="Create" method="post">
        <div class="form-group mb-3">
            <label for="Name" class="form-label">اسم الفئة</label>
            <input asp-for="Name" class="form-control" placeholder="أدخل اسم الفئة" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="Description" class="form-label">الوصف</label>
            <textarea asp-for="Description" class="form-control" placeholder="أدخل الوصف"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label for="ParentCategoryId" class="form-label">الفئة الرئيسية</label>
            <select asp-for="ParentCategoryId" asp-items="ViewBag.ParentCategoryId" class="form-select">
                <option value="">اختر الفئة الرئيسية</option>
            </select>
            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-dark">إضافة</button>
        <a href="@Url.Action("Index", "ProductCategories")" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
