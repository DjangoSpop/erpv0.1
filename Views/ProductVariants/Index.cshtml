@model erpv0._1.Models.ViewModels.ProductVariantIndexViewModel

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-box-seam me-2"></i> متغيرات المنتجات
                    </h5>
                    <div>
                        <a asp-action="Create" class="btn btn-light btn-sm me-2">
                            <i class="bi bi-plus-circle me-1"></i> إضافة متغير
                        </a>
                        <a asp-action="BulkImport" class="btn btn-light btn-sm">
                            <i class="bi bi-upload me-1"></i> استيراد
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Filtering Section -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="ProductId" asp-items="Model.Products" class="form-select">
                                        <option value="">كل المنتجات</option>
                                    </select>
                                    <label for="ProductId">المنتج</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="Size" asp-items="Model.Sizes" class="form-select">
                                        <option value="">كل المقاسات</option>
                                    </select>
                                    <label for="Size">المقاس</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="Color" asp-items="Model.Colors" class="form-select">
                                        <option value="">كل الألوان</option>
                                    </select>
                                    <label for="Color">اللون</label>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 text-start">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i> بحث
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-clockwise me-1"></i> تحديث
                            </a>
                        </div>
                    </form>

                    <!-- Product Variants Table -->
                    <div class="table-responsive">
                        <table class="table table-hover table-striped">
                            <thead class="table-light">
                                <tr>
                                    <th>المنتج</th>
                                    <th>المقاس</th>
                                    <th>اللون</th>
                                    <th>النمط</th>
                                    <th>تعديل السعر</th>
                                    <th>الحالة</th>
                                    <th>الإجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                              
