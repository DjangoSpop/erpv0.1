@model erpv0._1.Models.Product
@{
    ViewData["Title"] = "حذف المنتج";
}

<div class="container mt-5 text-right">
    <h1 class="mb-4 text-danger">حذف المنتج</h1>
    <p>هل أنت متأكد أنك تريد حذف المنتج التالي؟</p>
    <dl class="row">
        <dt class="col-sm-3">اسم المنتج</dt>
        <dd class="col-sm-9">@Model.ProductName</dd>

        <dt class="col-sm-3">العلامة التجارية</dt>
        <dd class="col-sm-9">@Model.Brand?.BrandName</dd>

        <dt class="col-sm-3">الفئة</dt>
        <dd class="col-sm-9">@Model.Category?.Name</dd>
    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        @Html.HiddenFor(model => model.ProductId)
        <button type="submit" class="btn btn-danger">حذف</button>
        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
