@model erpv0._1.Models.Product
@{
    ViewData["Title"] = "تفاصيل المنتج";
}

<div class="products-module">
    <h1 class="mb-4">تفاصيل المنتج</h1>
    <div class="row">
        <div class="col-md-6">
            <p><strong>اسم المنتج:</strong> @Model.ProductName</p>
            <p><strong>العلامة التجارية:</strong> @Model.Brand?.BrandId</p>
        </div>
        <div class="col-md-6">
            <p><strong>الفئة:</strong> @Model.Category?.Name</p>
            <p><strong>السعر:</strong> @Model.ListPrice.ToString("C")</p>
        </div>  
    </div>

    <h2 class="mt-5">تفاصيل إضافية</h2>
    <ul class="nav nav-tabs" id="productTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="true">التفاصيل</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="variants-tab" data-bs-toggle="tab" data-bs-target="#variants" type="button" role="tab" aria-controls="variants" aria-selected="false">المتغيرات</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="price-tab" data-bs-toggle="tab" data-bs-target="#price" type="button" role="tab" aria-controls="price" aria-selected="false">سجل الأسعار</button>
        </li>
    </ul>
    <div class="tab-content" id="productTabsContent">
        <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
            <p>تفاصيل المنتج هنا...</p>
        </div>
        <div class="tab-pane fade" id="variants" role="tabpanel" aria-labelledby="variants-tab">
            <p>المتغيرات هنا...</p>
        </div>
        <div class="tab-pane fade" id="price" role="tabpanel" aria-labelledby="price-tab">
            <p>سجل الأسعار هنا...</p>
        </div>
    </div>

    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary mt-3">رجوع</a>
</div>
