@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Warehouse ERP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark floating-nav">

        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-box-seam"></i> Warehouse ERP
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="bi bi-speedometer2"></i> Dashboard
                        </a>
                    </li>

                    <!-- Products Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-box"></i> Products
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Products")">All Products</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "ProductCategories")">Categories</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "ProductVariants")">Variants</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "ProductTranslations")">Translations</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "PriceHistories")">Price History</a></li>
                        </ul>
                    </li>

                    <!-- Warehouse Management -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-building"></i> Warehouses
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Warehouses")">All Warehouses</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "StockEntries")">Stock Entries</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "WarehouseTransfers")">Transfers</a></li>
                        </ul>
                    </li>

                    <!-- Stock Management -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-boxes"></i> Stocks
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Stocks")">Stocks</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "StockEntries")">Stock Entries</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "StockMovements")">Stock Movements</a></li>
                        </ul>
                    </li>

                    <!-- Reports -->
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Reports")">
                            <i class="bi bi-file-earmark-text"></i> Reports
                        </a>
                    </li>
                </ul>

                <!-- User Menu -->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "SystemSettings")"><i class="bi bi-gear"></i> Settings</a></li>
                            <li><a class="dropdown-item" href="#"><i class="bi bi-box-arrow-right"></i> Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
        @* <button id="darkModeToggle" class="btn btn-outline-light">🌙</button> *@
    </nav>

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
  
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>
    <div class="floating-actions" dir="rtl">
        <div class="fab-container">
            <!-- Main FAB -->
            <button class="fab-button fab-main">
                <i class="bi bi-plus"></i>
            </button>

            <!-- Quick Actions Menu -->
            <div class="fab-options">
                <!-- Add Product/Item -->
                <button class="fab-option" data-bs-toggle="tooltip" data-bs-placement="right" title="إضافة منتج جديد"
                        onclick="location.href='@Url.Action("Create", "Products")'">
                    <i class="bi bi-box-seam"></i>
                    <span class="fab-label">إضافة منتج</span>
                </button>

                <!-- New Warehouse -->
                <button class="fab-option" data-bs-toggle="tooltip" data-bs-placement="right" title="إضافة مستودع جديد"
                        onclick="location.href='@Url.Action("Create", "Warehouses")'">
                    <i class="bi bi-building-add"></i>
                    <span class="fab-label">مستودع جديد</span>
                </button>

                <!-- Stock Entry -->
                <button class="fab-option" data-bs-toggle="tooltip" data-bs-placement="right" title="إدخال مخزون"
                        onclick="location.href='@Url.Action("Create", "StockEntries")'">
                    <i class="bi bi-box-arrow-in-down"></i>
                    <span class="fab-label">إدخال مخزون</span>
                </button>

                <!-- Transfer Stock -->
                <button class="fab-option" data-bs-toggle="tooltip" data-bs-placement="right" title="نقل مخزون"
                        onclick="location.href='@Url.Action("Create", "WarehouseTransfers")'">
                    <i class="bi bi-arrow-left-right"></i>
                    <span class="fab-label">نقل مخزون</span>
                </button>

                <!-- Quick Report -->
                <button class="fab-option" data-bs-toggle="tooltip" data-bs-placement="right" title="تقرير سريع"
                        onclick="location.href='@Url.Action("QuickReport", "Reports")'">
                    <i class="bi bi-file-earmark-text"></i>
                    <span class="fab-label">تقرير سريع</span>
                </button>
            </div>
        </div>
    </div>
    <footer class="footer mt-auto py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Warehouse ERP</h5>
                    <p class="small">Efficient inventory management solution</p>
                </div>
                <div class="col-md-4 text-center">
                    <p class="mb-0">© @DateTime.Now.Year - All rights reserved</p>
                </div>
                <div class="col-md-4 text-end">
                    <a href="#" class="text-decoration-none me-2"><i class="bi bi-github"></i></a>
                    <a href="#" class="text-decoration-none me-2"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="text-decoration-none"><i class="bi bi-envelope"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
