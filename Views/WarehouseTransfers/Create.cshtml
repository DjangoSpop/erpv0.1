<!-- Example of UI/UX improvements in Create.cshtml -->
@model erpv0._1.Models.WarehouseTransfer
@{
    ViewData["Title"] = "إنشاء طلب نقل";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary bg-gradient d-flex justify-content-between align-items-center">
            <h4 class="mb-0 text-white"><i class="bi bi-box-arrow-up-right me-2"></i>إنشاء طلب نقل جديد</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left me-1"></i>العودة للقائمة
            </a>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" id="createTransferForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-4">
                    <!-- Source Warehouse -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="SourceWarehouseId" class="form-select" asp-items="ViewBag.SourceWarehouseId">
                                <option value="">-- اختر المستودع المصدر --</option>
                            </select>
                            <label asp-for="SourceWarehouseId">المستودع المصدر</label>
                            <span asp-validation-for="SourceWarehouseId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Destination Warehouse -->
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="DestWarehouseId" class="form-select" asp-items="ViewBag.DestWarehouseId">
                                <option value="">-- اختر المستودع الوجهة --</option>
                            </select>
                            <label asp-for="DestWarehouseId">المستودع الوجهة</label>
                            <span asp-validation-for="DestWarehouseId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Product Selection -->
                    <div class="col-md-8">
                        <div class="form-floating">
                            <select asp-for="ProductId" class="form-select" asp-items="ViewBag.ProductId">
                                <option value="">-- اختر المنتج --</option>
                            </select>
                            <label asp-for="ProductId">المنتج</label>
                            <span asp-validation-for="ProductId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Quantity Input -->
                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="Quantity" class="form-control" min="1" />
                            <label asp-for="Quantity">الكمية</label>
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col-12 d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-success btn-lg px-4">
                            <i class="bi bi-check-circle me-1"></i> إنشاء الطلب
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-x-circle me-1"></i> إلغاء
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            $('.form-select').select2({
                theme: 'bootstrap-5',
                width: '100%',
                dir: 'rtl',
                language: 'ar'
            });
        });
    </script>
}
